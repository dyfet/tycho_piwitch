{% if sip_server_banner is defined and sip_server_banner is not none %}
banner = {{ sip_server_banner }}
{% else %}
banner = Welcome to {{ ansible_hostname }}
{% endif %}
database = mysql
realm = {{ ansible_nodename }}
retain = {{ sip_message_retention }}
operators = {{ sip_operators_policy }}

{% if sip_server_names is defined and sip_server_names is not none %}
; force override auto-detection of server response host names
localnames = {{ sip_server_names }}

{% endif %}
[database]
name = piwitch
username = sipwitch

[bootstrap]
; This is used to initially bootstrap the database only.  After login
; you should change the bootstrap password.
extension = {{ db_initial_extension }}
authorize = {{ db_initial_authorize }}
identity = {{ db_initial_identity }}
password = {{ db_initial_password }}
